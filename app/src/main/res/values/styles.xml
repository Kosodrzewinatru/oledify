<resources>

    <style name="AppTheme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorMain</item>
        <item name="colorPrimaryDark">@color/colorAdditional</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAdditional</item>
        <item name="android:navigationBarColor">@color/colorMain</item>
    </style>

    <style name="AppTheme.SettingsScreen">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.GalleryFragment">
        <item name="android:background">@color/colorBackground</item>
    </style>

    <!-- Styles for text -->
    <style name="TextSemiBold">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="TextBold">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="TextHuge">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">16dp</item>
    </style>

</resources>
