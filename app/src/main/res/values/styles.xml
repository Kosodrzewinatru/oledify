<resources>

    <style name="AppTheme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:windowBackground">@color/color_background</item>
        <item name="colorPrimary">@color/color_main</item>
        <item name="colorPrimaryDark">@color/color_additional</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:statusBarColor">@color/color_additional</item>
        <item name="android:navigationBarColor">@color/color_main</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.SettingsScreen">
        <item name="android:windowBackground">@color/color_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:navigationBarColor">@color/color_background</item>
        <item name="android:colorBackground">@color/color_main</item>
    </style>

    <style name="AppTheme.GalleryFragment">
        <item name="android:background">@color/color_background</item>
    </style>

    <style name="AppTheme.BottomNavigationView">
        <item name="android:background">@color/color_main</item>
        <item name="itemIconTint">@android:color/white</item>
        <item name="itemTextColor">@color/color_accent</item>
    </style>
    
    <style name="AppTheme.ContentLoadingProgressBar">
        <item name="android:colorAccent">@android:color/white</item>
    </style>

    <!-- Styles for text -->
    <style name="TextSemiBold">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="ButtonTextEnabled">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/color_button_text_enabled</item>
    </style>

    <style name="ButtonTextDisabled">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/color_button_text_disabled</item>
    </style>

    <style name="ViewBackgroundLeft">
        <item name="android:background">@color/color_background_additional</item>
    </style>

    <style name="ViewBackgroundRight">
        <item name="android:background">@color/color_background</item>
    </style>

    <style name="TextBold">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="TextHuge">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">16dp</item>
    </style>

</resources>
