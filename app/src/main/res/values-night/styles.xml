<resources>

    <!-- Dark theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
        <item name="colorPrimary">@color/colorMainDark</item>
        <item name="colorPrimaryDark">@color/colorAdditionalDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorBackgroundDark</item>
    </style>

    <style name="AppTheme.SettingsScreen">
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.GalleryFragment">
        <item name="android:background">@color/colorBackgroundDark</item>
    </style>

</resources>

